FROM node:16 as build-step

RUN mkdir /app
WORKDIR /app

COPY package*.json ./
RUN npm install

ARG REACT_APP_JAVA_API_URL
ENV REACT_APP_API_URL=$REACT_APP_JAVA_API_URL

ARG REACT_APP_NODEJS_API_URL
ENV REACT_APP_SOCKET_URL=$REACT_APP_NODEJS_API_URL

ARG REACT_APP_GOOGLE_AUTHEN_URL
ENV REACT_APP_GOOGLE_AUTHEN_URL=$REACT_APP_GOOGLE_AUTHEN_URL

ARG REACT_APP_FACEBOOK_AUTHEN_URL
ENV REACT_APP_FACEBOOK_AUTHEN_URL=$REACT_APP_FACEBOOK_AUTHEN_URL

COPY . .
RUN npm run build

FROM nginx:latest
COPY --from=build-step /app/build /usr/share/nginx/html
